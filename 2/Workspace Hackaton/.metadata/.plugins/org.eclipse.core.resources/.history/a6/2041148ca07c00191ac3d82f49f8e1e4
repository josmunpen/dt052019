
package domain;

import java.util.Date;

import javax.persistence.Access;
import javax.persistence.AccessType;
import javax.persistence.Entity;
import javax.persistence.ManyToOne;
import javax.persistence.Temporal;
import javax.persistence.TemporalType;
import javax.validation.Valid;
import javax.validation.constraints.NotNull;

import org.hibernate.validator.constraints.NotBlank;
import org.hibernate.validator.constraints.Range;
import org.hibernate.validator.constraints.SafeHtml;
import org.springframework.format.annotation.DateTimeFormat;

@Entity
@Access(AccessType.PROPERTY)
public class Comment2 extends DomainEntity {

	private String	comment;
	private Date	moment;
	private int		score;


	@NotBlank
	@SafeHtml
	public String getComment() {
		return this.comment;
	}

	public void setComment(final String comment) {
		this.comment = comment;
	}

	@NotNull
	@Temporal(TemporalType.TIMESTAMP)
	@DateTimeFormat(pattern = "yyyy-MM-dd HH:mm:ss")
	public Date getMoment() {
		return this.moment;
	}

	public void setMoment(final Date moment) {
		this.moment = moment;
	}

	@NotNull
	@Range(min = 1, max = 5)
	public int getScore() {
		return this.score;
	}

	public void setScore(final int score) {
		this.score = score;
	}


	private PetOwner2	petOwner;
	private Adopter2	adopter;


	@Valid
	@ManyToOne(optional = false)
	public PetOwner2 getPetOwner() {
		return this.petOwner;
	}

	public void setPetOwner(final PetOwner2 petOwner) {
		this.petOwner = petOwner;
	}

	@Valid
	@ManyToOne(optional = false)
	public Adopter2 getAdopter() {
		return this.adopter;
	}

	public void setAdopter(final Adopter2 adopter) {
		this.adopter = adopter;
	}

}
